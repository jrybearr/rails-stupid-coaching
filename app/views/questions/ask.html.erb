<div class="d-flex flex-column p-5 mx-auto" style="width: 1000px;">
  <h1>Stupid Coaching</h1>
  <div class="d-flex flex-column p-3 input-group mb-3">
    <form action="/answer" method="get">
      <div class="h5 py-3">
        <label for="question">Ask your coach anything:</label>
      </div>
      <div class="d-flex input-group input-group-lg">
        <input type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm" name="question" id="quesiton" placeholder="write your question here..." value="<%= params[:question] %>">
        <input type="submit" class="input-group-text btn btn-primary" id="inputGroup-sizing-lg" value="Ask">
      </div>
    </form>
  </div>
</div>
